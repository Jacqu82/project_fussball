{% extends 'base.html.twig' %}

{% block body %}
    <div class="container text-center">
        <h1>Zmień hasło</h1>
        {{ form_start(form, {'attr': {'novalidate': 'novalidate'}}) }}
        {{ form_row(form.email) }}
        {{ form_row(form.submit) }}
        {{ form_end(form) }}
        <hr/>
        <h4><a href="{{ path('login') }}" class="btn btn-info">Powrót</a></h4>
    </div>
{% endblock %}