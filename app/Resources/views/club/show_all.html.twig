{% extends "::base.html.twig" %}

{% block body %}
    {% include 'widgets/header.html.twig' %}
    <div class="container text-center">
        <h1>Kluby Ekstraklasy</h1>
        <hr/>
        <h3>Mój klub</h3>
        {% for club in clubs %}
            {% if club.name == 'Górnik Zabrze' %}
                <a href="{{ path('show_id', {'id': club.id}) }}" class="links btn btn-danger">{{ club.name }}<br/>
                    <img src="{{ club.getWebPath }}" width="200" height="200">
                </a>
            {% endif %}
        {% endfor %}
        <hr/>
        <h3>Pozostałe kluby</h3>
        {% for club in clubs %}
            {% if club.name != 'Górnik Zabrze' %}
                <a href="{{ path('show_id', {'id': club.id}) }}" class="links btn btn-info">{{ club.name }}<br/>
                    <img src="{{ club.getWebPath }}" width="200" height="200">
                </a>
            {% endif %}
        {% endfor %}
    </div>
    <hr/>
    <div class="container text-center">
        <h3>Kluby ekstraklasy na mapie Polski</h3>
    </div>
    <div class="container map">
        {% include 'widgets/locations.html.twig' %}
    </div>
    <hr/>
    {% include 'widgets/footer.html.twig' %}
{% endblock %}